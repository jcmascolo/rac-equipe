@page
@model RacEquipe.Pages.Reservations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<h3>Êtes-vous certain de vouloir supprimer ceci ?</h3>
<div>
    <h4>Réservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.DateFrom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.DateFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.DateTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.DateTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Equipement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Equipement.EquipementId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.Utilisateur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.Utilisateur.UtilisateurId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Reservation.ReservationId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retourner à la liste</a>
    </form>
</div>
