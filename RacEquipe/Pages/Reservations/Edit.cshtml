@page
@model RacEquipe.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Modifier";
}

<h1>Modifier</h1>

<h4>Réservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ReservationId" />
            <div class="form-group">
                <label asp-for="Reservation.DateFrom" class="control-label"></label>
                <input asp-for="Reservation.DateFrom" class="form-control" />
                <span asp-validation-for="Reservation.DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.DateTo" class="control-label"></label>
                <input asp-for="Reservation.DateTo" class="form-control" />
                <span asp-validation-for="Reservation.DateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.EquipementId" class="control-label"></label>
                <select asp-for="Reservation.EquipementId" class="form-control" asp-items="ViewBag.EquipementId"></select>
                <span asp-validation-for="Reservation.EquipementId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.UtilisateurId" class="control-label"></label>
                <select asp-for="Reservation.UtilisateurId" class="form-control" asp-items="ViewBag.UtilisateurId"></select>
                <span asp-validation-for="Reservation.UtilisateurId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
        @if (!ViewBag.ReservationCompletee)
        {
            <div class="alert alert-danger" role="alert">
                Cette plage horaire n'est pas disponible.
            </div>
        }
    </div>
</div>

<div>
    <a asp-page="./Index">Retourner à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
